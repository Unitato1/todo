<h1>Today todos</h1>
<div class="container">
  <% @todos.each do |todo|%>
    <div class="todo">
      <h1><%= todo.id.to_s + '. todo' %></h1>
      <div><%= todo.name %></div>
      <div><%= todo.till || 'not specified' %></div>
      <div><%= todo.description %></div>
      <div><%= todo.priority %></div>
      <%= link_to 'This project', todo %>
    </div>
  <% end %>
</div>
<%= link_to 'New project', new_project_url %>
